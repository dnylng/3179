{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A map of Japan with hostels",
  "title": "Japan",
  "width": 700,
  "height": 1000,
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/dnylng/3179/main/wk9homework/js/ne_10m_admin_1_states_provinces.json",
        "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
      },
      "projection": {"type": "mercator"},
      "mark": {"type": "geoshape", "fill": "#ccc", "stroke": "#fff"}
    },
    {
      "data": {"url": "https://raw.githubusercontent.com/dnylng/3179/main/wk9homework/data/Hostel.csv"},
      "projection": {"type": "mercator"},
      "mark": {"type": "circle", "size": 10, "color": "red"},
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "tooltip": [
          {"field": "hostel", "type": "nominal", "title": "Hostel Name"},
          {"field": "City", "type": "nominal", "title": "City"},
          {"field": "price_from", "type": "quantitative", "title": "Price From"},
          {"field": "summary_score", "type": "quantitative", "title": "Summary Score"},
          {"field": "rating_band", "type": "nominal", "title": "Rating Band"}
        ]
      }
    }
  ]
}
